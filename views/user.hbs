<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
$(document).ready(function() {
    $('.delete-user').click(function(e) {
        e.preventDefault();
        if (confirm('Are you sure to delete this record ?')) {
            $.ajax({
                url: $(this).attr('href'),
                type: 'DELETE',
                success: function(result) {
                    location.reload();
                }
            });
        }
    });
});
</script>

