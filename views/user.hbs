<h3><a class="btn btn-secondary" href="/add"><i class="fa fa-plus"></i> Create New</a> User List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Phone</th>
            
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.username}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            
